<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>Giddy-up! Battle Mounts</modName>
				<yourMod>Forsakens: Fauna and Flora</yourMod>
			</li>



			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/ThingDef[defName = "FO_ForsakenDragon"]</xpath> 
				<value>
					<li Class="GiddyUpCore.CustomStatsPatch">
						<!--Speed factor. -->
						<speedModifier>1.35</speedModifier>
						<!--Armor factor. -->
						<armorModifier>1.25</armorModifier>
						<!--Setting useMetalArmor to true, makes the animal's skin have the metal bounce of effect when hit when used as mount --> 
						<useMetalArmor>true</useMetalArmor>
					</li>
				</value>
			</li>
			
			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/ThingDef[defName = "FO_ForsakenDragon"]</xpath> 
				<value>
					<li Class="GiddyUpCore.DrawingOffsetPatch">
						<eastOffsetCSV>0,0,0.25</eastOffsetCSV>
						<westOffsetCSV>0,0,0.25</westOffsetCSV>
						<southOffsetCSV>0,0,0.25</southOffsetCSV>
					</li>				
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "FO_ForsakenDragon"]</xpath> 
				<value>
				<comps>
					<li Class="GiddyUpCore.CompProperties_Overlay">
						<overlaySide> 
							<graphicDataDefault>
								<texPath>Animals/FO_ForsakenDragon/FO_ForsakenDragonSaddle_east</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>6.5</drawSize>
								<drawRotated>false</drawRotated>
								
							</graphicDataDefault>					
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlaySide>
						<overlayFront> 
							<graphicDataDefault>
								<texPath>Animals/FO_ForsakenDragon/FO_ForsakenDragonSaddle_south</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>6.5</drawSize>
								<drawRotated>false</drawRotated>
								
							</graphicDataDefault>					
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayFront>
						<overlayBack> 
							<graphicDataDefault>
								<texPath>Animals/FO_ForsakenDragon/FO_ForsakenDragonSaddle_north</texPath>
								<graphicClass>Graphic_Single</graphicClass>
								<drawSize>6.5</drawSize>
								<drawRotated>false</drawRotated>
								
							</graphicDataDefault>					
							<offsetDefault>(0,0,0,0)</offsetDefault>
						</overlayBack>

					</li>
				</comps>
				</value>
			</li>
			
		


		</operations>
	</Operation>


</Patch>

