<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!--========== Dragon leather ============-->



	<ThingDef ParentName="LeatherBase">
		<defName>Leather_ForsakenDragon</defName>
		<label>forsaken dragon scales</label>
		<description>Hard overlapping scales of draconic chitin. It is exceptionally durable in combat, but provides little protection from weather.</description>
		<graphicData>
			<texPath>Resource/FO_Chitin</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<color>(43,43,43)</color>
		</graphicData>
		<statBases>
			<MarketValue>4.2</MarketValue>
			<StuffPower_Armor_Sharp>1.55</StuffPower_Armor_Sharp>
			<StuffPower_Insulation_Cold>10</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>10</StuffPower_Insulation_Heat>
		</statBases>
		<stuffProps>
			<color>(43,43,43)</color>
			<commonality>0</commonality>
			<statFactors>
				<MaxHitPoints>1.5</MaxHitPoints>
			</statFactors>
		</stuffProps>
	</ThingDef>

	<!--========== Duskling wool ============-->

	<ThingDef ParentName="WoolBase">
		<defName>FO_NightWool</defName>
		<label>night wool</label>
		<description>This dark hued wool is soft, light and provides very good insulation. Stronger than other similar wools.</description>
		<graphicData>
			<color>(45,45,57)</color>
		</graphicData>
		<statBases>
			<StuffPower_Armor_Sharp>0.60</StuffPower_Armor_Sharp>
		    <StuffPower_Armor_Blunt>0.25</StuffPower_Armor_Blunt>
		    <StuffPower_Armor_Heat>1.20</StuffPower_Armor_Heat>
			<StuffPower_Insulation_Cold>30</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>12</StuffPower_Insulation_Heat>
		</statBases>
		<stuffProps>
			<commonality>0.025</commonality>
			<color>(45,45,57)</color>
		</stuffProps>
	</ThingDef>
	
	<!--========== Night leather (copied from Alpha Animals) ============-->

	
	<ThingDef ParentName="LeatherBase">
		<defName>Leather_Night</defName>
		<label>night leather</label>
		<description>Thick leather, darker than the darkest night. This thick skin insulates and protects very well.</description>
		<graphicData>
			<color>(10,10,10)</color>
		</graphicData>
		<statBases>
			<MarketValue>3.5</MarketValue>
			<StuffPower_Armor_Sharp>1.3</StuffPower_Armor_Sharp>
			<StuffPower_Insulation_Cold>32</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>15</StuffPower_Insulation_Heat>
		</statBases>
		<stuffProps>
			<color>(10,10,10)</color>
			<commonality>0.001</commonality>
			<statFactors>
				<MaxHitPoints>1.55</MaxHitPoints>
			</statFactors>
		</stuffProps>
	</ThingDef>



</Defs>